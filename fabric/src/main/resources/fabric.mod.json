{
  "schemaVersion": 1,
  "id": "hudium",
  "version": "${version}",

  "name": "Hudium",
  "description": "Highly customizable HUD mod.",
  "authors": [
    "Flamarine"
  ],
  "contributors": [
    "Precizne"
  ],

  "license": "MIT",
  "icon": "icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "dev.intelligentcreations.hudium.impl.fabric.HudiumClientFabricImpl"
    ],
    "hudium:plugin": [
      "dev.intelligentcreations.hudium.impl.DefaultPlugin"
    ]
  },
  "mixins": [
    "hudium.mixins.json",
    "hudium-fabric.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "1.20.1",
    "java": ">=17"
  }
}
